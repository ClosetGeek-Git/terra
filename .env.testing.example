# Terra Test Configuration

# Transport type to use for testing
# Options: zmq, unix, http
JANUS_TRANSPORT=zmq

# ZeroMQ Transport Configuration
JANUS_ADMIN_ADDRESS=tcp://localhost:7889

# Unix Socket Transport Configuration
JANUS_ADMIN_SOCKET=/tmp/janus_admin.sock

# HTTP/REST Transport Configuration
JANUS_ADMIN_HOST=localhost
JANUS_ADMIN_PORT=7088
JANUS_ADMIN_BASE_PATH=/admin
JANUS_ADMIN_SECURE=false

# Admin API Secret (required for all transports)
JANUS_ADMIN_SECRET=janusoverlord

# Test Configuration
SKIP_INTEGRATION_TESTS=false
LOG_LEVEL=info
